<div class='container'>
  <h2>{{history.0.user_id.username}}</h2>
  <br />
  <div class='row justify-content-center'>
    <div
      class='col-md-2 d-flex flex-row align-items-center justify-content-around'
    >
      <img
        class='profile-avatar'
        src='{{history.0.user_id.avatar}}'
        alt='{{history.0.user_id.username}}'
      /></div>
    <div
      class='col-md-10 d-flex flex-row align-items-center justify-content-around'
    >
      {{history.0.user_id.firstName}}
      {{history.0.user_id.lastName}}
      {{history.0.user_id.country}}
      {{history.0.user_id.age}}

    </div>
    <br />
  </div>

  <h5>Reading History</h5>

  {{#each history}}
    <p>{{date}}</p>
    <ul>

      {{#each cards_id}}
        <li>{{name}}</li>
      {{/each}}
    </ul>
    <a href='/cards/history-reading/' class='btn btn-purple'>Detail</a>
    <hr />
  {{/each}}

  <br />

  {{#if isLogged}}
    <a href='/user/profile/{{id}}/edit' class='btn btn-warning'>Edit</a>
  {{/if}}

  {{#if isADMIN}}

    <a href='/admin' class='btn btn-info'>Admin Lab</a>
  {{/if}}
</div>