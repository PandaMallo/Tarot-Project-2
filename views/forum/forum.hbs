<div class="container">


    <div class="row justify-content-center">

        <div class="col-md-8">

            <h1>The Forum</h1>
            <br>
            <h3>Let everyone in the comunity help you</h3>
            <hr>
            <br>

            <form action="/forum" method="POST">
                <div class="form-group">
                    <label for="message">Your Message</label>
                    <textarea type="textarea" row="10" class="form-control" id="message" name="message" placeholder="min 10 - max 150"></textarea>
                </div>
                

                <button type="submit" class="btn btn-dark btn-block">Post Message</button>
            </form>


            <hr>

           {{#each forum}}
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row no-gutters">
                    <div class="col-md-2">
                        <img src="{{user_id.avatar}}" alt="{{userid_.username}}">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                        <h5 class="card-name">{{user_id.username}}</h5>
                        <h5 class="card-date">{{date}}</h5>
                        <p class="card-text">{{message}}</p>
                    </div>
                 </div>
            </div>
            {{/each}}
        </div>
            
     </div>
</div>



