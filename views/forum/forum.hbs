<div class='container'>

  <div class='row justify-content-center'>

    <div class='col-md-8'>

      <h1>Forum</h1>

      <h3>Let everyone in the comunity help you</h3>
      <br />

      <form action='/forum' method='POST'>
        <div class='form-group'>
          <label for='message'>Your Message</label>
          <textarea
            type='textarea'
            row='10'
            class='form-control'
            id='message'
            name='message'
            placeholder='min 10 - max 150'
          ></textarea>
        </div>

        <button type='submit' class='btn btn-purple btn-block'>Post Message</button>
      </form>

     

      <hr />

      {{#each forum}}
        <div class='card mb-3' style='max-width: 540px;'>
          <div class='row no-gutters'>
            <div class='col-md-2'>
              <img
                class='forum-avatar'
                src='{{user_id.avatar}}'
                alt='{{userid_.username}}'
              />
            </div>
            <div class='col-md-10'>
              <div class='card-body'>
                <h5 class='card-name'>{{user_id.username}}</h5>
                <p class='card-date'><small>{{date}}</small></p>
                <p class='card-text'>{{message}}</p>
              </div>
            </div>
          </div>
        </div>
         <form action="/forum/forum/{{id}}/delete" method="POST">
        <button type="submit" class="btn btn-danger">Delete</button>
      </form>
      {{/each}}
    </div>

  </div>
</div>

